		},
		{
			"name": "Post data",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var userEmail = pm.environment.get(\"userEmail\");",
							"var userId = pm.environment.get(\"idUser\");",
							"var userToken;",
							"",
							"pm.test(\"Successful POST request\", function () {",
							"    pm.expect(pm.response.code).to.be.oneOf([200, 201]);",
							"});",
							"",
							"pm.test(\"Token imput present in response\", function () {",
							"    pm.expect(pm.response.json()).to.have.property(\"token\");",
							"})",
							"",
							"pm.test(\"Id is \" + userId, function () {",
							"    pm.expect(pm.response.json().id).to.eql(parseInt(userId));",
							"})",
							"",
							"if(pm.response.json().token) {",
							"    userToken = pm.response.json().token;",
							"    pm.environment.set(\"userToken\", userToken);",
							"    console.log(\"Token is defined in userToken environment variable : \" + userToken);",
							"}",
							"",
							"",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
