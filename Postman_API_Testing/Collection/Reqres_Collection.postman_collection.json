	"item": [
		{
			"name": "Get data",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"var jsonResponse = pm.response.json();",
							"var idUser = pm.environment.get(\"idUser\");",
							"",
							"pm.test(\"Status code is 200\", function () {",
							"    pm.response.to.have.status(200);",
							"});",
							"",
							"pm.test(\"Email imput is present\", function () {",
							"    pm.expect(jsonResponse.data).to.have.property(\"email\");",
							"})",
							"",
							"pm.test(\"ID is \" + idUser, function () {",
							"    pm.expect(jsonResponse.data.id).to.equal(parseInt(idUser));",
							"})",
							"",
							"if(jsonResponse.data && jsonResponse.data.email){",
							"    var email = jsonResponse.data.email;",
							"    pm.environment.set(\"user_email\", email);",
							"    console.log(\"Email set to \" + email + \" in environment variable user_email\");",
							"}",
							""
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "x-api-key",
						"value": "reqres-free-v1",
						"type": "text"
					}
				],
				"url": {
					"raw": "{{server}}/users/{{idUser}}",
					"host": [
						"{{server}}"
					],
					"path": [
						"users",
						"{{idUser}}"
					]
				},
				"description": "This is a GET request and it is used to \"get\" data from an endpoint. There is no request body for a GET request, but you can use query parameters to help specify the resource you want data on (e.g., in this request, we have `id=1`).\n\nA successful GET response will have a `200 OK` status, and should include some kind of response body - for example, HTML web content or JSON data."
			},
